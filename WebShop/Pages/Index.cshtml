@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@if (Model.ProductDto != null)
{
    <table class="table table-hover table-bordered table-responsive">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Name Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductDto)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.productCategory.Category
                    </td>
                    <td>
                        <a asp-page="/Product/Details" asp-route-id="@item.Id">
                            More
                        </a>
                    </td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-success" asp-page-handler="ToBasket">Add to Cart</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>NOT PRODUCT</p>
}