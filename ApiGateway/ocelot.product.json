{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/product",
      "UpstreamHttpMethod": [
        "GET"
      ],
      
      "RateLimitOptions": {
        "EnableRateLimiting": true, // فعال یا غیر فعال
        "Period": "2s", // بازه زمانی
        "PeriodTimespan": 5, // مدت زمانی که باید صبر کنیم برای درخواست بعدی
        "Limit": 1 // محدودیت درخواست
      },
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3, // بعد از چند خطا مدار را باز کنم؟
        "DurationOfBreak": 5000, // به چه مدت مدار باز باشد؟
        "TimeoutValue": 9000 // اگر هر درخواست بیشتر از تایم زمان برد آن را برگشت بده- منتظر درخواست نمون
      }
      
    },
    {
      "DownstreamPathTemplate": "/api/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/product/{id}",
      "UpstreamHttpMethod": [
        "GET"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/category",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/category",
      "UpstreamHttpMethod": [
        "GET"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/productAdmin",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/ProductAdmin",
      "UpstreamHttpMethod": [
        "POST",
        "PUT"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/productAdmin/{productId}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/ProductAdmin/{productId}",
      "UpstreamHttpMethod": [
        "DELETE"
      ]
    },
    {
      "DownstreamPathTemplate": "/api/productAdmin/category",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7001"
        }
      ],
      "UpstreamPathTemplate": "/ProductAdmin/category",
      "UpstreamHttpMethod": [
        "POST"
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https//localhost:7070"
  }
}